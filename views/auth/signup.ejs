<!DOCTYPE html>
<html lang="en" class="h-100">
  <%- include("../includes/head.ejs") %>
  </head>

  <body class="d-flex flex-column h-100">
    <%- include("../includes/navbar.ejs") %>
    
    <!-- Flash Messages -->
    <%- include("../includes/flash.ejs") %>

    <main class="flex-shrink-0">


    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <h2 class="mb-4 text-center">Create Your Account</h2>

          <form
            action="/api/auth/signUp"
            method="POST"
            class="needs-validation p-4 shadow rounded bg-white"
            novalidate
          >
            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                placeholder="Choose a unique username"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a username.</div>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="you@example.com"
                required
              />
              <div class="valid-feedback">Valid email!</div>
              <div class="invalid-feedback">Please enter a valid email.</div>
            </div>

            <!-- Role selector -->
            <div class="mb-3">
              <label for="role" class="form-label">Select Role</label>
              <select class="form-select" id="role" name="role" required>
                <option value="" disabled selected>Select your role</option>
                <option value="hod">HOD</option>
                <option value="faculty">Faculty</option>
                <option value="user">User</option>
              </select>
              <div class="valid-feedback">Role selected!</div>
              <div class="invalid-feedback">Please select a role.</div>

        
            <!-- Password -->
                  <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="position-relative">
                  <input
                    type="password"
                    class="form-control pe-5"
                    id="password"
                    name="password"
                    placeholder="At least 4 characters"
                    required
                  />
                  <button
                    type="button"
                    id="togglePassword"
                    class="position-absolute top-50 end-0 translate-middle-y bg-transparent border-0 p-0 me-3"
                    aria-label="Show/Hide password"
                    tabindex="-1"
                  >
                    <i class="bi bi-eye fs-5"></i>
                  </button>
                </div>
              </div>

            <!-- Terms -->
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="terms"
                required
              />
              <label class="form-check-label" for="terms">
               <a href="/terms">I agree to the Terms & Conditions</a>

              </label>
              <div class="invalid-feedback">
                You must agree before submitting.
              </div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <button class="btn btn-primary btn-lg" type="submit">
                Sign Up
              </button>
            </div>
          </form>

          <p class="mt-3 text-center">
            Already have an account? <a href="/api/auth/login">Log in</a>
          </p>
        </div>
      </div>
    </div>
    </main>

    <%- include("../includes/footer.ejs") %>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    <script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.querySelector("#togglePassword");
    const input = document.querySelector("#password");

    if (toggle && input) {
      toggle.addEventListener("click", () => {
        const isPassword = input.type === "password";
        input.type = isPassword ? "text" : "password";

        // swap eye / eye-slash
        const icon = toggle.querySelector("i");
        icon.classList.toggle("bi-eye");
        icon.classList.toggle("bi-eye-slash");
      });
    }
  });
</script>

  </body>
</html>
