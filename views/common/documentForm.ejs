<!DOCTYPE html>
<html lang="en" class="h-100">
  <%- include("../includes/head.ejs") %>
  <title><%= isEdit ? 'Edit' : 'Upload' %> Document - Dept Connect</title>
  </head>

  <body class="d-flex flex-column h-100 bg-light">
    <%- include("../includes/navbar.ejs") %>
    
    <!-- Flash Messages -->
    <%- include("../includes/flash.ejs") %>

    <!-- Main Content -->
    <main class="flex-shrink-0">
      <div class="container mt-4">
        <div class="row justify-content-center">
          <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
              <div class="card-header bg-white border-0 pb-0">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="mb-0"><%= isEdit ? 'Edit' : 'Upload' %> Document</h5>
                  <a href="/api/documents" class="btn-close"></a>
                </div>
              </div>
              <div class="card-body pt-3">
                <form 
                  action="<%= isEdit ? `/api/documents/${document._id}?_method=PUT` : '/api/documents' %>" 
                  method="POST" 
                  enctype="multipart/form-data"
                >
                  <!-- Title -->
                  <div class="mb-3">
                    <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                    <input 
                      type="text" 
                      class="form-control border-0 bg-light" 
                      id="title" 
                      name="title" 
                      value="<%= document ? document.title : '' %>"
                      placeholder="Enter document title" 
                      required
                    >
                  </div>

                  <!-- Description -->
                  <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea 
                      class="form-control border-0 bg-light" 
                      id="description" 
                      name="description" 
                      rows="3" 
                      placeholder="Enter document description (optional)"
                    ><%= document ? document.description : '' %></textarea>
                  </div>

                  <!-- Category and Visibility -->
                  <div class="row">
                    <div class="col-6 mb-3">
                      <label for="category" class="form-label">Category</label>
                      <select class="form-select border-0 bg-light" id="category" name="category">
                        <option value="other" <%= document && document.category === 'other' ? 'selected' : '' %>>Other</option>
                        <option value="syllabus" <%= document && document.category === 'syllabus' ? 'selected' : '' %>>Syllabus</option>
                        <option value="notes" <%= document && document.category === 'notes' ? 'selected' : '' %>>Notes</option>
                        <option value="assignments" <%= document && document.category === 'assignments' ? 'selected' : '' %>>Assignments</option>
                        <option value="notices" <%= document && document.category === 'notices' ? 'selected' : '' %>>Notices</option>
                        <option value="forms" <%= document && document.category === 'forms' ? 'selected' : '' %>>Forms</option>
                      </select>
                    </div>

                    <div class="col-6 mb-3">
                      <label for="isPublic" class="form-label">Visibility</label>
                      <select class="form-select border-0 bg-light" id="isPublic" name="isPublic">
                        <option value="true" <%= !document || document.isPublic ? 'selected' : '' %>>Public</option>
                        <option value="false" <%= document && !document.isPublic ? 'selected' : '' %>>Private</option>
                      </select>
                    </div>
                  </div>

                  <!-- File Upload -->
                  <% if (!isEdit) { %>
                    <div class="mb-3">
                      <label for="document" class="form-label">Select File <span class="text-danger">*</span></label>
                      <input type="file" class="form-control border-0 bg-light" id="document" name="document" accept=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png" required>
                      <div class="form-text">Supported: PDF, DOC, DOCX, TXT, JPG, JPEG, PNG (Max: 10MB)</div>
                    </div>
                  <% } else { %>
                    <div class="mb-3">
                      <label for="document" class="form-label">Replace File (Optional)</label>
                      <input type="file" class="form-control border-0 bg-light" id="document" name="document" accept=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png">
                      <div class="form-text">Leave empty to keep current file: <%= document.fileName %></div>
                    </div>
                  <% } %>

                  <!-- Buttons -->
                  <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="/api/documents" class="btn btn-light">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                      <%= isEdit ? 'Update' : 'Upload' %> Document
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include("../includes/footer.ejs") %>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>