<!DOCTYPE html>
<html lang="en" class="h-100">
  <%- include("../includes/head.ejs") %>
  <title>Faculty Dashboard</title>
  </head>

  <body class="d-flex flex-column h-100">
    <%- include("../includes/navbar.ejs") %>
    
    <!-- Flash Messages -->
    <%- include("../includes/flash.ejs") %>

    <!-- Main Content -->
    <main class="flex-shrink-0">
      <div class="container mt-4">
        <div class="row">
          <div class="col-12">
            <div class="card shadow-sm">
              <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                  <i class="bi bi-person-workspace me-2"></i>
                  Faculty Dashboard
                </h4>
              </div>
              <div class="card-body">
                <h2 class="text-primary mb-3">Welcome, <%= user.username %>!</h2>
                <p class="lead">Manage your announcements and view department updates.</p>
                
                <div class="row mt-4">
                  <div class="col-md-4 mb-3">
                    <div class="card border-primary">
                      <div class="card-body text-center">
                        <i class="bi bi-megaphone fs-1 text-primary mb-3"></i>
                        <h5>Create Announcement</h5>
                        <p class="text-muted">Share important updates with students</p>
                        <a href="/api/announcements/create" class="btn btn-primary">
                          Create New
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="card border-info">
                      <div class="card-body text-center">
                        <i class="bi bi-list-ul fs-1 text-info mb-3"></i>
                        <h5>View Announcements</h5>
                        <p class="text-muted">See all department announcements</p>
                        <a href="/api/announcements" class="btn btn-info">
                          View All
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="card border-success">
                      <div class="card-body text-center">
                        <i class="bi bi-cloud-upload fs-1 text-success mb-3"></i>
                        <h5>Upload Documents</h5>
                        <p class="text-muted">Share resources and materials</p>
                        <a href="/api/documents/upload" class="btn btn-success">
                          Upload Files
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="card border-warning">
                      <div class="card-body text-center">
                        <i class="bi bi-folder2-open fs-1 text-warning mb-3"></i>
                        <h5>Manage Documents</h5>
                        <p class="text-muted">View and organize uploaded files</p>
                        <a href="/api/documents" class="btn btn-warning">
                          View Documents
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="card border-warning">
                      <div class="card-body text-center">
                        <i class="bi bi-calendar-check fs-1 text-warning mb-3"></i>
                        <h5>Leave Requests</h5>
                        <p class="text-muted">Review student leave applications</p>
                        <a href="/api/leave-requests" class="btn btn-warning">
                          Review Requests
                        </a>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include("../includes/footer.ejs") %>
  </body>
</html>
