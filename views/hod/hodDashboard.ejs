<!DOCTYPE html>
<html lang="en" class="h-100">
  <%- include("../includes/head.ejs") %>
  <title>HOD Dashboard</title>
  </head>

  <body class="d-flex flex-column h-100">
    <%- include("../includes/navbar.ejs") %>
    
    <!-- Flash Messages -->
    <%- include("../includes/flash.ejs") %>

    <!-- Main Content -->
    <main class="flex-shrink-0">
      <div class="container mt-4">
        <div class="row">
          <div class="col-12">
            <div class="card shadow-sm">
              <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                  <i class="bi bi-person-badge me-2"></i>
                  HOD Dashboard
                </h4>
              </div>
              <div class="card-body">
                <h2 class="text-success mb-3">Welcome, <%= username %>!</h2>
                <p class="lead">Manage department operations and oversee all activities.</p>
                
                <div class="row mt-4">
                  <div class="col-md-4 mb-3">
                    <div class="card border-success">
                      <div class="card-body text-center">
                        <i class="bi bi-megaphone fs-1 text-success mb-3"></i>
                        <h5>Manage Announcements</h5>
                        <p class="text-muted">Create and manage all announcements</p>
                        <a href="/api/announcements" class="btn btn-success">
                          Manage
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="card border-primary">
                      <div class="card-body text-center">
                        <i class="bi bi-folder2 fs-1 text-primary mb-3"></i>
                        <h5>Document Repository</h5>
                        <p class="text-muted">Manage all department documents</p>
                        <a href="/api/documents" class="btn btn-primary">
                          Manage Files
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="card border-warning">
                      <div class="card-body text-center">
                        <i class="bi bi-people fs-1 text-warning mb-3"></i>
                        <h5>Faculty Management</h5>
                        <p class="text-muted">Oversee faculty activities</p>
                        <a href="#" class="btn btn-warning">
                          View Faculty
                        </a>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4 mb-3">
                    <div class="card border-warning">
                      <div class="card-body text-center">
                        <i class="bi bi-calendar-check fs-1 text-warning mb-3"></i>
                        <h5>Leave Management</h5>
                        <p class="text-muted">Oversee all leave requests</p>
                        <a href="/api/leave-requests" class="btn btn-warning">
                          Manage Leaves
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="card border-secondary">
                      <div class="card-body text-center">
                        <i class="bi bi-cloud-upload fs-1 text-secondary mb-3"></i>
                        <h5>Upload Documents</h5>
                        <p class="text-muted">Add new department resources</p>
                        <a href="/api/documents/upload" class="btn btn-secondary">
                          Upload Files
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include("../includes/footer.ejs") %>
  </body>
</html>
